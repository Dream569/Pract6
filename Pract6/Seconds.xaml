<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pract6.Seconds"
             Title="Seconds">
    <StackLayout Padding="20">
        <Label x:Name="TimerLabel" FontSize="48" HorizontalOptions="Center" />
        <Label x:Name="PitStop" FontSize="48" HorizontalOptions="Center" />
        <Button Text="Старт" Clicked="OnStartClicked" x:Name="OnStartClicked1"/>
        <Button Text="Стоп" Clicked="OnStopClicked" x:Name="OnStopClicked1"/>
        <Button Text="Сброс" Clicked="OnResetClicked" x:Name="OnResetClicked1"/>
        <Button Text="Пауза" Clicked="OnPitStopClicked" x:Name="OnPitStopClicked1"/>
    </StackLayout>
</ContentPage>