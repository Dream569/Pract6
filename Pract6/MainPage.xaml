<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pract6.MainPage"
             >
    
    <StackLayout Orientation="Horizontal">
        <DatePicker x:Name="dpDate" Format="dd MMMM yyyy" DateSelected="dpDate_DateSelected"></DatePicker>
        <Label x:Name="tpTime" FontSize="72" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>
