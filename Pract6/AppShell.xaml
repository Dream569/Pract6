<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pract6.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Pract6"
    Shell.FlyoutBehavior="Disabled"
    Title="Часики">
    <TabBar>
        <Tab Title="Clock">
            <ShellContent Title="Clock" ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Timer">
            <ShellContent Title="Timer" ContentTemplate="{DataTemplate local:Timer}"/>
        </Tab>
        <Tab Title="Seconds">
            <ShellContent Title="Seconds" ContentTemplate="{DataTemplate local:Seconds}"/>
        </Tab>
        <Tab Title="Alarm">
            <ShellContent Title="Alarm" ContentTemplate="{DataTemplate local:Alarm}"/>
        </Tab>
        <Tab Title="Napomil">
            <ShellContent Title="Napomil" ContentTemplate="{DataTemplate local:Napomil}"/>
        </Tab>
    </TabBar>
</Shell>
